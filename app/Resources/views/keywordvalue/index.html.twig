    {% extends 'AppBundle::base.html.twig' %}


    {% block body %}

    <div class="row heading">
        <div class="col-md-9">
            <h1>{{ 'keywordvalue.labels.plural' | trans }}</h1>
        </div>
        <div class="col-md-3 text-right">
                            <a class="btn btn-default" href="{{ path('keywordvalue_new') }}">
                    {{ icon('plus') }} {{ 'keywordvalue.actions.new' | trans }}
                </a>
                    </div>
        <div class="col-md-3 text-right">
            <h2><small>{% include 'AppBundle:_includes:pagination_count.html.twig' %}</small></h2>
        </div>

    </div>

    <table class="table table-condensed table-header-rotated">
        <thead>
        <tr>                
                <th class="rotate"><div><span>{{ knp_pagination_sortable(pagination, 'keywordvalue.id'|trans, 'id') }}</span></div></th>                
                <th class="rotate"><div><span>{{ knp_pagination_sortable(pagination, 'keywordvalue.display'|trans, 'display') }}</span></div></th>                
                <th class="rotate"><div><span>{{ knp_pagination_sortable(pagination, 'keywordvalue.value'|trans, 'value') }}</span></div></th>
            {{ helper.header() }}
        </tr>
        </thead>
        <tbody>
        {% for keywordvalue in pagination %}
        <tr>
                    <td><a href="{{ path('keywordvalue_show', { 'id': keywordvalue.id }) }}">{{ keywordvalue.id }}</a></td>
                    <td>{{ keywordvalue.display }}</td>
                    <td>{{ keywordvalue.value }}</td>
                    <td class="text-right">
                        <a class="btn btn-default btn-xs" href="{{ path('keywordvalue_edit', { 'id': keywordvalue.id }) }}">{{ 'common.edit' | trans }}</a>
                    </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col text-center">
            {{ knp_pagination_render(pagination, "", {}, { "prev_label": "«", "next_label": "»", "first_label": "««", "last_label": "»»"}) }}
        </div>
    </div>
    {% endblock %}
