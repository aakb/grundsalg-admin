{% extends '@EasyAdmin/default/edit.html.twig' %}

{% block body_javascript %}
	{{ parent() }}

	<script>
      (function ($) {
          $(document).ready(function () {

              var fields = $('input[type="date"]');
              fields.each(function(index, element) {
                  var isDisabled = $(element).is(':disabled');
                  var dateType = $(element).prop('type');
                  if (!isDisabled && dateType != 'date' ) {
                      $(element).datepicker({
                          language: 'da',
                          todayBtn: 'linked',
                          format: 'yyyy-mm-dd',
                          todayHighlight: true
                      });
                  }
              });

          });
      }(jQuery));
	</script>

	{% include 'easy_admin/_includes/_translations.js.twig' %}
{% endblock %}

{% block delete_form %}
	{% if can_delete(entity) %}
		{{ parent() }}
	{% else %}
		{% include 'easy_admin/_includes/_cannot_delete_message.html.twig' %}
	{% endif %}
{% endblock %}
