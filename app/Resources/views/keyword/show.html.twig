{% extends 'AppBundle::base.html.twig' %}


{% block body %}
    <div class="row heading">
        <div class="col-md-9">
            <h1>Keyword</h1>
        </div>
        <div class="col-md-3 text-right">
            <a class="btn btn-default" href="{{ path('keyword_edit', { 'id': keyword.id }) }}">{{ 'common.edit' | trans }}</a>
        </div>

    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">{{ icon('chevron-right') }} {{ 'keyword.labels.singular' | trans }}</div>
                <table class="table table-condensed">
                    <tbody>
                            <tr>
                                <th>{{ 'keyword.id' | trans }}</th>
                                <td>{{ keyword.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'keyword.title' | trans }}</th>
                                <td>{{ keyword.title }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'keyword.alias' | trans }}</th>
                                <td>{{ keyword.alias }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'keyword.description' | trans }}</th>
                                <td>{{ keyword.description }}</td>
                            </tr>                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
