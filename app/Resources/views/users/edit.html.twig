{% extends 'AppBundle::base.html.twig' %}


{% block body %}
    <div class="row heading">
        <div class="col-md-9">
            <h1>{{ 'users.actions.edit' | trans }}</h1>
        </div>
        <div class="col-md-3 text-right">
                {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="{{ 'common.delete' | trans }}">
                {{ form_end(delete_form) }}        </div>
    </div>

    {{ form_start(edit_form) }}        
    {{ form_row(edit_form.name)}}        
    {{ form_row(edit_form.username)}}        
    {{ form_row(edit_form.password)}}        
    {{ form_row(edit_form.roles)}}        
    {{ form_row(edit_form.createdby)}}        
    {{ form_row(edit_form.createddate)}}        
    {{ form_row(edit_form.modifiedby)}}        
    {{ form_row(edit_form.modifieddate)}}    {{ form_end(edit_form) }}
    <input type="submit" class="btn btn-primary" value="{{ 'common.edit' | trans }}" />

{% endblock %}
