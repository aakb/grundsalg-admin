    {% extends 'AppBundle::base.html.twig' %}


    {% block body %}

    <div class="row heading">
        <div class="col-md-9">
            <h1>{{ 'lokalplan.labels.plural' | trans }}</h1>
        </div>
        <div class="col-md-3 text-right">
                            <a class="btn btn-default" href="{{ path('lokalplan_new') }}">
                    {{ icon('plus') }} {{ 'lokalplan.actions.new' | trans }}
                </a>
                    </div>
        <div class="col-md-3 text-right">
            <h2><small>{% include 'AppBundle:_includes:pagination_count.html.twig' %}</small></h2>
        </div>

    </div>

    <table class="table table-condensed table-header-rotated">
        <thead>
        <tr>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.id'|trans, 'id') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.nr'|trans, 'nr') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.lsnr'|trans, 'lsnr') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.titel'|trans, 'titel') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.projektleder'|trans, 'projektleder') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.telefon'|trans, 'telefon') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.lokalplanlink'|trans, 'lokalplanlink') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.samletareal'|trans, 'samletareal') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.salgbartareal'|trans, 'salgbartareal') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.forbrugsandel'|trans, 'forbrugsandel') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.createdby'|trans, 'createdby') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.createddate'|trans, 'createddate') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.modifiedby'|trans, 'modifiedby') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'lokalplan.modifieddate'|trans, 'modifieddate') }}</th>
            {{ helper.header() }}
        </tr>
        </thead>
        <tbody>
        {% for lokalplan in pagination %}
        <tr>
                    <td><a href="{{ path('lokalplan_show', { 'id': lokalplan.id }) }}">{{ lokalplan.id }}</a></td>
                    <td>{{ lokalplan.nr }}</td>
                    <td>{{ lokalplan.lsnr }}</td>
                    <td>{{ lokalplan.titel }}</td>
                    <td>{{ lokalplan.projektleder }}</td>
                    <td>{{ lokalplan.telefon }}</td>
                    <td>{{ lokalplan.lokalplanlink }}</td>
                    <td>{{ lokalplan.samletareal }}</td>
                    <td>{{ lokalplan.salgbartareal }}</td>
                    <td>{{ lokalplan.forbrugsandel }}</td>
                    <td>{{ lokalplan.createdby }}</td>
                    <td>{% if lokalplan.createddate %}{{ lokalplan.createddate|date('d/m Y') }}{% endif %}</td>
                    <td>{{ lokalplan.modifiedby }}</td>
                    <td>{% if lokalplan.modifieddate %}{{ lokalplan.modifieddate|date('d/m Y') }}{% endif %}</td>
                    <td class="text-right">
                        <a class="btn btn-default btn-xs" href="{{ path('lokalplan_edit', { 'id': lokalplan.id }) }}">{{ 'common.edit' | trans }}</a>
                    </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col text-center">
            {{ knp_pagination_render(pagination, "", {}, { "prev_label": "«", "next_label": "»", "first_label": "««", "last_label": "»»"}) }}
        </div>
    </div>
    {% endblock %}
