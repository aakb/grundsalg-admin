{% extends 'AppBundle::base.html.twig' %}


{% block body %}
    <div class="row heading">
        <div class="col-md-9">
            <h1>User</h1>
        </div>
        <div class="col-md-3 text-right">
            <a class="btn btn-default" href="{{ path('user_edit', { 'id': user.id }) }}">{{ 'common.edit' | trans }}</a>
        </div>

    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">{{ icon('chevron-right') }} {{ 'user.labels.singular' | trans }}</div>
                <table class="table table-condensed">
                    <tbody>
                            <tr>
                                <th>{{ 'user.id' | trans }}</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'user.name' | trans }}</th>
                                <td>{{ user.name }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'user.createdAt' | trans }}</th>
                                <td>{% if user.createdAt %}{{ user.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>{{ 'user.updatedAt' | trans }}</th>
                                <td>{% if user.updatedAt %}{{ user.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>{{ 'user.createdBy' | trans }}</th>
                                <td>{{ user.createdBy }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'user.updatedBy' | trans }}</th>
                                <td>{{ user.updatedBy }}</td>
                            </tr>                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
