    {% extends 'AppBundle::base.html.twig' %}


    {% block body %}

    <div class="row heading">
        <div class="col-md-9">
            <h1>{{ 'opkoeb.labels.plural' | trans }}</h1>
        </div>
        <div class="col-md-3 text-right">
                            <a class="btn btn-default" href="{{ path('opkoeb_new') }}">
                    {{ icon('plus') }} {{ 'opkoeb.actions.new' | trans }}
                </a>
                    </div>
        <div class="col-md-3 text-right">
            <h2><small>{% include 'AppBundle:_includes:pagination_count.html.twig' %}</small></h2>
        </div>

    </div>

    <table class="table table-condensed table-header-rotated">
        <thead>
        <tr>                
                <th>{{ knp_pagination_sortable(pagination, 'opkoeb.id'|trans, 'id') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'opkoeb.matrik1'|trans, 'matrik1') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'opkoeb.matrik2'|trans, 'matrik2') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'opkoeb.ejerlav'|trans, 'ejerlav') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'opkoeb.m2'|trans, 'm2') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'opkoeb.bemaerkning'|trans, 'bemaerkning') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'opkoeb.opkoebdato'|trans, 'opkoebdato') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'opkoeb.pris'|trans, 'pris') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'opkoeb.procentaflp'|trans, 'procentaflp') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'opkoeb.createdby'|trans, 'createdby') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'opkoeb.createddate'|trans, 'createddate') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'opkoeb.modifiedby'|trans, 'modifiedby') }}</th>                
                <th>{{ knp_pagination_sortable(pagination, 'opkoeb.modifieddate'|trans, 'modifieddate') }}</th>
            {{ helper.header() }}
        </tr>
        </thead>
        <tbody>
        {% for opkoeb in pagination %}
        <tr>
                    <td><a href="{{ path('opkoeb_show', { 'id': opkoeb.id }) }}">{{ opkoeb.id }}</a></td>
                    <td>{{ opkoeb.matrik1 }}</td>
                    <td>{{ opkoeb.matrik2 }}</td>
                    <td>{{ opkoeb.ejerlav }}</td>
                    <td>{{ opkoeb.m2 }}</td>
                    <td>{{ opkoeb.bemaerkning }}</td>
                    <td>{% if opkoeb.opkoebdato %}{{ opkoeb.opkoebdato|date('d/m Y') }}{% endif %}</td>
                    <td>{{ opkoeb.pris }}</td>
                    <td>{{ opkoeb.procentaflp }}</td>
                    <td>{{ opkoeb.createdby }}</td>
                    <td>{% if opkoeb.createddate %}{{ opkoeb.createddate|date('d/m Y') }}{% endif %}</td>
                    <td>{{ opkoeb.modifiedby }}</td>
                    <td>{% if opkoeb.modifieddate %}{{ opkoeb.modifieddate|date('d/m Y') }}{% endif %}</td>
                    <td class="text-right">
                        <a class="btn btn-default btn-xs" href="{{ path('opkoeb_edit', { 'id': opkoeb.id }) }}">{{ 'common.edit' | trans }}</a>
                    </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col text-center">
            {{ knp_pagination_render(pagination, "", {}, { "prev_label": "«", "next_label": "»", "first_label": "««", "last_label": "»»"}) }}
        </div>
    </div>
    {% endblock %}
