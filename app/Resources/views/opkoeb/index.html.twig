{% extends 'AppBundle::base.html.twig' %}


{% block body %}

    <div class="row heading">
        <div class="col-md-9">
            <h1>{{ 'opkoeb.labels.plural' | trans }}</h1>
        </div>
        <div class="col-md-3 text-right">
                            <a class="btn btn-default" href="{{ path('opkoeb_new') }}">
                    {{ icon('plus') }} {{ 'opkoeb.actions.add' | trans }}
                </a>
                    </div>

    </div>

    <table class="table table-condensed table-header-rotated">
        <thead>
            <tr>
                    {{ helper.header('appbundle.opkoeb.matrik1') }}
                    {{ helper.header('appbundle.opkoeb.matrik2') }}
                    {{ helper.header('appbundle.opkoeb.ejerlav') }}
                    {{ helper.header('appbundle.opkoeb.m2') }}
                    {{ helper.header('appbundle.opkoeb.bemaerkning') }}
                    {{ helper.header('appbundle.opkoeb.opkoebdato') }}
                    {{ helper.header('appbundle.opkoeb.pris') }}
                    {{ helper.header('appbundle.opkoeb.procentaflp') }}
                    {{ helper.header('appbundle.opkoeb.createdby') }}
                    {{ helper.header('appbundle.opkoeb.createddate') }}
                    {{ helper.header('appbundle.opkoeb.modifiedby') }}
                    {{ helper.header('appbundle.opkoeb.modifieddate') }}
                {{ helper.header() }}
            </tr>
        </thead>
        <tbody>
        {% for opkoeb in opkoebs %}
            <tr>
                <td><a href="{{ path('opkoeb_show', { 'id': opkoeb.id }) }}">{{ opkoeb.id }}</a></td>
                <td>{{ opkoeb.matrik1 }}</td>
                <td>{{ opkoeb.matrik2 }}</td>
                <td>{{ opkoeb.ejerlav }}</td>
                <td>{{ opkoeb.m2 }}</td>
                <td>{{ opkoeb.bemaerkning }}</td>
                <td>{% if opkoeb.opkoebdato %}{{ opkoeb.opkoebdato|date('Y-m-d') }}{% endif %}</td>
                <td>{{ opkoeb.pris }}</td>
                <td>{{ opkoeb.procentaflp }}</td>
                <td>{{ opkoeb.createdby }}</td>
                <td>{% if opkoeb.createddate %}{{ opkoeb.createddate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ opkoeb.modifiedby }}</td>
                <td>{% if opkoeb.modifieddate %}{{ opkoeb.modifieddate|date('Y-m-d') }}{% endif %}</td>
                <td class="text-right">
                  <a class="btn btn-default btn-xs" href="{{ path('opkoeb_edit', { 'id': opkoeb.id }) }}">{{ 'common.edit' | trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('opkoeb_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
