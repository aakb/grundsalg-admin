  {% extends 'AppBundle::base.html.twig' %}


  {% block body -%}

  <div class="row heading">
    <div class="col-md-9">
        <h1>{{ 'keyword.labels.plural' | trans }}</h1>
    </div>
    <div class="col-md-3 text-right">
              <a class="btn btn-default" href="{{ path('keyword_new') }}">
          {{ icon('plus') }} {{ 'keyword.actions.add' | trans }}
        </a>
          </div>

  </div>


  <table class="table table-condensed table-header-rotated">
    <thead>
    <tr>
        {{ helper.header('appbundle.keyword.title') }}
        {{ helper.header('appbundle.keyword.alias') }}
        {{ helper.header('appbundle.keyword.description') }}
      {{ helper.header() }}
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
    <tr>
                  <td>{{ entity.title }}</td>
        
                  <td>{{ entity.alias }}</td>
        
                  <td>{{ entity.description }}</td>
        
      <td class="text-right">    <a class="btn btn-default btn-xs" href="{{ path('keyword_edit', { 'id': entity.id }) }}">{{ 'common.edit' | trans }}</a>

      </td>

    </tr>
    {% endfor %}
    </tbody>
  </table>

  {% endblock %}
