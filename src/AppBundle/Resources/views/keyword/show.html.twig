  {% extends 'AppBundle::base.html.twig' %}


{% block body -%}
  <div class="row heading">
    <div class="col-md-9">
      <h1>{{ entity }}</h1>
    </div>
    <div class="col-md-3 text-right">    <a class="btn btn-default btn-default" href="{{ path('keyword_edit', { 'id': entity.id }) }}">{{ 'common.edit' | trans }}</a>

    </div>

  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">{{ icon('chevron-right') }} {{ 'keyword.labels.singular' | trans }}</div>
        <table class="table table-condensed">
          <tbody>
            <tr>
              <th>{{ 'appbundle.keyword.title' | trans }}</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.keyword.alias' | trans }}</th>
                <td>{{ entity.alias }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.keyword.description' | trans }}</th>
                <td>{{ entity.description }}</td>
            </tr>          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
