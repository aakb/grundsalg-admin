  {% extends 'AppBundle::base.html.twig' %}


{% block body -%}
  <div class="row heading">
    <div class="col-md-9">
      <h1>{{ entity }}</h1>
    </div>
    <div class="col-md-3 text-right">    <a class="btn btn-default btn-default" href="{{ path('lokalplan_edit', { 'id': entity.id }) }}">{{ 'common.edit' | trans }}</a>

    </div>

  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">{{ icon('chevron-right') }} {{ 'lokalplan.labels.singular' | trans }}</div>
        <table class="table table-condensed">
          <tbody>
            <tr>
              <th>{{ 'appbundle.lokalplan.nr' | trans }}</th>
                <td>{{ entity.nr }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.lokalplan.lsnr' | trans }}</th>
                <td>{{ entity.lsnr }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.lokalplan.titel' | trans }}</th>
                <td>{{ entity.titel }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.lokalplan.projektleder' | trans }}</th>
                <td>{{ entity.projektleder }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.lokalplan.telefon' | trans }}</th>
                <td>{{ entity.telefon }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.lokalplan.lokalplanlink' | trans }}</th>
                <td>{{ entity.lokalplanlink }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.lokalplan.samletareal' | trans }}</th>
                <td>{{ entity.samletareal }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.lokalplan.salgbartareal' | trans }}</th>
                <td>{{ entity.salgbartareal }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.lokalplan.forbrugsandel' | trans }}</th>
                <td>{{ entity.forbrugsandel }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.lokalplan.createdby' | trans }}</th>
                <td>{{ entity.createdby }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.lokalplan.createddate' | trans }}</th>
                <td>{{ entity.createddate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.lokalplan.modifiedby' | trans }}</th>
                <td>{{ entity.modifiedby }}</td>
            </tr>
            <tr>
              <th>{{ 'appbundle.lokalplan.modifieddate' | trans }}</th>
                <td>{{ entity.modifieddate|date('Y-m-d H:i:s') }}</td>
            </tr>          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
